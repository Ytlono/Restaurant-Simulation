<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="006-1" author="restaurant_simulation">
        <createTable tableName="cook">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_cook_actor" references="simulated_actor(id)"/>
            </column>
            <column name="status" type="VARCHAR(50)"/>
            <column name="speciality" type="VARCHAR(255)"/>
            <column name="ticket_id" type="BIGINT">
                <constraints foreignKeyName="fk_cook_ticket" references="kitchen_ticket(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>