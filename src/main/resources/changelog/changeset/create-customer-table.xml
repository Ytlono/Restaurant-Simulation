<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="007-1" author="restaurant_simulation">
        <createTable tableName="customer">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_customer_actor" references="simulated_actor(id)"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="ticket_id" type="BIGINT">
                <constraints foreignKeyName="fk_customer_ticket" references="service_ticket(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>